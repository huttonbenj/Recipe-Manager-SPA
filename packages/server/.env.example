# Recipe Manager Server Environment Variables

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/recipe_manager
DATABASE_TEST_URL=postgresql://postgres:your_password@localhost:5432/recipe_manager_test

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here-at-least-32-characters-long

# Server Configuration
PORT=3001
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=uploads

# Seed Script Passwords (for development only)
SEED_ADMIN_PASSWORD=TempAdmin2024!
SEED_CHEF_PASSWORD=TempChef2024!
SEED_HOME_PASSWORD=TempHome2024!

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=server.log
