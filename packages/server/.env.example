# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=recipe_manager
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Database URL (alternative to individual DB_ variables)
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/recipe_manager

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters

# Security Note:
# - Generate strong, unique secrets for JWT_SECRET and JWT_REFRESH_SECRET
# - Use different values for development, staging, and production
# - Never commit actual secrets to version control
