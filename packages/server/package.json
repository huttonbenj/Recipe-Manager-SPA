{
  "name": "@recipe-manager/server",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "DB_PORT=5433 DB_HOST=localhost DB_NAME=recipe_manager DB_USER=postgres DB_PASSWORD=postgres PORT=3001 ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --strict --noUnusedLocals --noUnusedParameters --exactOptionalPropertyTypes --noImplicitReturns --noUncheckedIndexedAccess",
    "migrate:up": "DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/recipe_manager} node-pg-migrate up",
    "migrate:down": "DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/recipe_manager} node-pg-migrate down",
    "migrate:create": "DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/recipe_manager} node-pg-migrate create"
  },
  "dependencies": {
    "@recipe-manager/shared": "1.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.0.2",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
