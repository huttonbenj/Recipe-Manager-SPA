{
  "name": "@recipe-manager/server",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "vitest --config ../../vitest.config.ts",
    "test:run": "vitest run --config ../../vitest.config.ts",
    "test:coverage": "vitest run --coverage --config ../../vitest.config.ts",
    "test:watch": "vitest --watch --config ../../vitest.config.ts",
    "test:ui": "vitest --ui --config ../../vitest.config.ts",
    "test:unit": "SKIP_DB_TESTS=true vitest run --reporter=verbose src/__tests__/unit --config ../../vitest.config.ts",
    "test:integration": "vitest run --reporter=verbose src/__tests__/integration --config ../../vitest.config.ts",
    "test:no-db": "SKIP_DB_TESTS=true vitest run --reporter=verbose --config ../../vitest.config.ts",
    "test:with-db": "vitest run --reporter=verbose --config ../../vitest.config.ts",
    "test:all": "vitest run --reporter=verbose --config ../../vitest.config.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --strict --noUnusedLocals --noUnusedParameters --exactOptionalPropertyTypes --noImplicitReturns --noUncheckedIndexedAccess",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:setup": "ts-node src/scripts/setup.ts",
    "db:check": "ts-node src/scripts/check-db.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "@recipe-manager/shared": "1.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "prisma": "^5.8.1",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
