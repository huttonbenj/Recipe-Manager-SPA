{
  "name": "@recipe-manager/client",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --config ../../vitest.config.ts",
    "test:run": "vitest run --config ../../vitest.config.ts",
    "test:coverage": "vitest run --coverage --config ../../vitest.config.ts",
    "test:watch": "vitest --watch --config ../../vitest.config.ts",
    "test:ui": "vitest --ui --config ../../vitest.config.ts",
    "test:unit": "vitest run --reporter=verbose src/__tests__/unit --config ../../vitest.config.ts",
    "test:integration": "vitest run --reporter=verbose src/__tests__/integration --config ../../vitest.config.ts",
    "test:components": "vitest run --reporter=verbose src/__tests__/components --config ../../vitest.config.ts",
    "test:hooks": "vitest run --reporter=verbose src/__tests__/hooks --config ../../vitest.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --strict --noUnusedLocals --noUnusedParameters --exactOptionalPropertyTypes --noImplicitReturns --noUncheckedIndexedAccess"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@recipe-manager/shared": "1.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tanstack/react-query": "^5.82.0",
    "@tanstack/react-query-devtools": "^5.82.0",
    "axios": "^1.10.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.468.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.60.0",
    "react-hot-toast": "^2.5.2",
    "react-image-crop": "^11.0.7",
    "react-intersection-observer": "^9.14.0",
    "react-loading-skeleton": "^3.5.0",
    "react-markdown": "^9.1.0",
    "react-router-dom": "^6.30.1",
    "react-textarea-autosize": "^8.5.5",
    "use-debounce": "^10.0.4",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "happy-dom": "^18.0.1",
    "msw": "^2.6.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.3",
    "vite": "^7.0.3"
  }
}
