# Recipe Manager E2E Test Environment Variables

# Base URL for testing
CYPRESS_BASE_URL=http://localhost:3000

# API URL for testing
CYPRESS_API_URL=http://localhost:3001

# Database Configuration for E2E tests
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/recipe_manager_test

# Test Configuration
CYPRESS_RECORD_KEY=your-cypress-record-key-here
CYPRESS_PROJECT_ID=your-cypress-project-id-here

# Test User Credentials
CYPRESS_TEST_USER_EMAIL=test@example.com
CYPRESS_TEST_USER_PASSWORD=TestPassword123!

# Browser Configuration
CYPRESS_BROWSER=chrome
CYPRESS_VIEWPORT_WIDTH=1280
CYPRESS_VIEWPORT_HEIGHT=720

# Timeouts
CYPRESS_DEFAULT_COMMAND_TIMEOUT=10000
CYPRESS_REQUEST_TIMEOUT=30000
