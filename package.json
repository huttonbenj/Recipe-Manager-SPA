{
  "name": "recipe-manager-spa",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/server",
    "packages/client",
    "packages/e2e"
  ],
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:cypress": "npm run test --workspace=packages/e2e",
    "test:e2e:cypress:open": "npm run cy:open --workspace=packages/e2e",
    "test:e2e:cypress:headless": "npm run cy:run:headless --workspace=packages/e2e",
    "test:ci": "vitest run && playwright test --reporter=dot",
    "test:ci:cypress": "vitest run && npm run test:e2e:cypress:headless",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:e2e": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"wait-on http://localhost:3000 && npm run test:e2e:cypress:open\"",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "typecheck:strict": "npm run typecheck:strict --workspaces",
    "check:all": "npm run typecheck && npm run typecheck:strict && npm run lint",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "install:all": "npm install && npm install --workspaces",
    "seed": "cd packages/server && npx ts-node src/scripts/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "concurrently": "^9.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@playwright/test": "^1.43.0",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "happy-dom": "^18.0.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.6.2",
    "supertest": "^7.1.3",
    "wait-on": "^8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
