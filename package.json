{
  "name": "recipe-manager-spa",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/client & npm run dev --workspace=packages/server",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "prepare": "husky install",
    "branch:update": "node scripts/branch-manager.js update",
    "branch:checkout": "node scripts/branch-manager.js checkout",
    "precommit": "npm run lint && npm run test",
    "push": "npm run branch:update && git push origin HEAD",
    "pr": "gh pr create --web"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}